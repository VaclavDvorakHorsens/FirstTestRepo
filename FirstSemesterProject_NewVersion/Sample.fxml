<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="640.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <center>
      <Pane prefHeight="655.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <TabPane fx:id="tabPane" layoutX="18.0" layoutY="29.0" prefHeight="540.0" prefWidth="938.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                  <Tab fx:id="allPlayersTab" onSelectionChanged="#MyTabListener" text="All Players">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="500.0" prefWidth="1000.0">
                           <children>
                              <TextArea fx:id="allPlayersArea" editable="false" layoutX="42.0" layoutY="42.0" prefHeight="409.0" prefWidth="866.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
  		<Tab fx:id="createPlayerTab" onSelectionChanged="#MyTabListener" text="Create Player">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="createPlayerName" layoutX="212.0" layoutY="92.0" />
                              <Label layoutX="98.0" layoutY="97.0" text="Player Name" />
                              <TextField fx:id="createPlayerNumber" layoutX="212.0" layoutY="152.0" />
                              <TextField fx:id="createPlayerPosition" layoutX="212.0" layoutY="210.0" />
                              <Label layoutX="98.0" layoutY="157.0" text="Player Number" />
                              <Label layoutX="99.0" layoutY="215.0" text="Player Position" />
                              <Button fx:id="createNewPlayer" layoutX="98.0" layoutY="296.0" mnemonicParsing="false" onAction="#MyActionListener" text="CreateNewPlayer" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                <Tab fx:id="changePlayersTab" onSelectionChanged="#MyTabListener" text="Edit Player">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="386.0" prefWidth="602.0">
                           <children>
                              <Button fx:id="updatePlayer" layoutX="25.0" layoutY="324.0" mnemonicParsing="false" onAction="#MyActionListener" text="SaveChanges" />
                              <RadioButton fx:id="ifInjuredYes" layoutX="174.0" layoutY="221.0" mnemonicParsing="false" text="Injured-Yes">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="ToggleGroupInjured" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="ifInjuredNo" layoutX="410.0" layoutY="221.0" mnemonicParsing="false" text="Injured-No" toggleGroup="$ToggleGroupInjured" />
                              <TextField fx:id="PlayerName" editable="false" layoutX="323.0" layoutY="68.0" />
                              <TextField fx:id="PlayerNumber" layoutX="323.0" layoutY="112.0" />
                              <TextField fx:id="PlayerPosition" layoutX="323.0" layoutY="163.0" />
                              <Label layoutX="175.0" layoutY="73.0" text="Player Name" />
                              <Label layoutX="175.0" layoutY="117.0" text="Player Number" />
                              <Label layoutX="175.0" layoutY="168.0" text="Player Position" />
                              <CheckBox fx:id="ifSuspended" layoutX="175.0" layoutY="263.0" mnemonicParsing="false" text="Suspended?" />
                              <TextField fx:id="SuspendedForHowManyMatches" layoutX="442.0" layoutY="258.0" prefHeight="31.0" prefWidth="72.0" />
                              <Label layoutX="318.0" layoutY="263.0" text="Days Suspended:" />
                              <ComboBox fx:id="playerBox" layoutX="25.0" layoutY="28.0" onAction="#MyActionListener" prefHeight="31.0" prefWidth="183.0" promptText="Pick Player" />
                              <Button fx:id="deletePlayer" layoutX="530.0" layoutY="324.0" mnemonicParsing="false" onAction="#MyActionListener" text="DeletePlayer" />
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                  <Tab fx:id="allSquadsTab" onSelectionChanged="#MyTabListener" text="All Squads">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TextArea fx:id="allSquadsArea" layoutX="35.0" layoutY="38.0" prefHeight="398.0" prefWidth="869.0" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                  <Tab fx:id="createSquadTab" onSelectionChanged="#MyTabListener" text="Create Squad">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="createSquadDate" layoutX="182.0" layoutY="78.0" />
                              <Label layoutX="55.0" layoutY="83.0" text="Date of Match" />
                              <Label layoutX="55.0" layoutY="123.0" text="Time of Match" />
                              <Label layoutX="47.0" layoutY="168.0" text="Opponent Name" />
                              <ComboBox fx:id="typeOfMatchBox" layoutX="44.0" layoutY="221.0" onAction="#MyActionListener" prefWidth="150.0" promptText="Type of Match" />
                              <TextField fx:id="createSquadTime" layoutX="182.0" layoutY="118.0" />
                              <TextField fx:id="createSquadOpponent" layoutX="182.0" layoutY="163.0" />
                              <Button fx:id="createNewSquad" layoutX="378.0" layoutY="456.0" mnemonicParsing="false" onAction="#MyActionListener" text="CreateNewSquad" />
                              <TextField fx:id="createSquadIndex" layoutX="182.0" layoutY="33.0" promptText="MUST BE A NUMBER" />
                              <Label layoutX="44.0" layoutY="38.0" text="Number of Match" />
                              <ComboBox fx:id="playerToSquadBox" layoutX="463.0" layoutY="18.0" onAction="#MyActionListener" prefWidth="150.0" promptText="AddPlayer" />
                              <TextArea fx:id="allFieldPlayersSquadArea" layoutX="463.0" layoutY="101.0" prefHeight="186.0" prefWidth="406.0" promptText="SET VALUES TO ALL FIELDS ON THE LEFT SIDE FIRST, PLEASE, THEN START ADDING PLAYERS" />
                              <Label layoutX="463.0" layoutY="68.0" text="Field Players" />
                              <Label layoutX="463.0" layoutY="303.0" text="Bench" />
                              <TextArea fx:id="allBenchPlayersSquadArea" layoutX="464.0" layoutY="324.0" prefHeight="120.0" prefWidth="407.0" promptText="SET VALUES TO ALL FIELDS ON THE LEFT SIDE FIRST, PLEASE, THEN START ADDING PLAYERS" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                
              </tabs>
            </TabPane>
            <TabPane layoutX="870.0" layoutY="256.0" onMouseClicked="#MyActionListener" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" />
            <MenuBar fx:id="menuBar" prefHeight="16.0" prefWidth="166.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="close" mnemonicParsing="false" onAction="#MyActionListener" text="Close" />
                  </items>
                </Menu>
                
              </menus>
            </MenuBar>
         </children>
      </Pane>
   </center>
</BorderPane>
